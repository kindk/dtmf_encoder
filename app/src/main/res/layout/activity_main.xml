<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cn.kindk.yjd.testtonegenerator.MainActivity">

    <EditText
        android:text="Android-TP-LINK_2.4GHz"
        android:hint="SSID"
        android:id="@+id/ssidEditText"
        android:layout_width="250dp"
        android:layout_height="wrap_content" />

    <EditText
        android:text="goodandroid"
        android:hint="password"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/pwdEditText" />

    <Button
        android:text="Send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playBtn"
        android:onClick="onPlayBtnClicked"/>

    <Button
        android:text="Connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/connectBtn"
        android:onClick="onConnectBtnClicked"/>
    <TextView
        android:text="PM2_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PM2_5TextView"/>
    <TextView
        android:text="PM10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PM10TextView"/>

</LinearLayout>
